<div class="col-6">
  <div class="text-center border border-primary">
    <h1> <%= @user.username %> </h1>
    <h3>🎮 My Games 🎮 </h3>
      <% @user.games.each do |game| %>
        <h4>Title: <%= game.title  %></h4>
        <p>Description: <%= game.description  %></p>
        <p> <%= link_to "Delete this game posting", game_path(game), data: { method: :delete, confirm: "Are you sure?" }  %> </p>
      <% end %>
   <h3>My Bookings ⭐️ </h3>
    <% @user.bookings.each do |booking| %>
      <p> <%= booking.game.title %> </p>
      <p> <%= booking.booking_start %> : <%= booking.booking_end %> </p>
    <% end %>
 </div>
 <%= link_to "Add/edit my avatar pic", edit_user_path(@user) %>

</div>
